<h1>Add user</h1>
{{#if error}} <span>{{error}}</span>{{/if}}
<form class="form-inline" method="POST" action="/user/add">
<div class="form-group">
  <label>ID</label>
  <input type="text" name="id" class="form-control" placeholder="Add ID">
</div>
<label>First name</label>
  <input type="text" name="first_name" class="form-control" placeholder="Add first name">
</div>
<label>second name</label>
  <input type="text" name="last_name" class="form-control" placeholder="Add second name">
</div>
<label>Email</label>
  <input type="text" name="email" class="form-control" placeholder="Add Email">
</div>
<label>Phone</label>
  <input type="text" name="phone" class="form-control" placeholder="Add phone">
</div>
<input type="submit" class="btn btn-primary" value="Save">
</form>